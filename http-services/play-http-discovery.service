[Unit]
Description==Play HTTP Announcer

Requires=etcd.service
Requires=play-http.service

After=etcd.service
After=play-http.service
BindsTo=play-http.service

[Service]
EnvironmentFile=-/etc/environment
ExecStart=/bin/sh -c "\
	while true; do \
		etcdctl set /services/play-http/host '${COREOS_PUBLIC_IPV4}'; \
		etcdctl set /services/play-http/port $(docker port play-http | awk -F':' '{print $2}') --ttl 60; \
		sleep 45; \
	done;"
ExecStop=/usr/bin/etcdctl rm /services/play-http

[X-Fleet]
MachineOf=play-http.service
