[Unit]
Description=Kafka Announcer

Requires=etcd.service
Requires=kafka@%i.service

After=etcd.service
After=kafka@%i.service
BindsTo=kafka@%i.service

[Service]
EnvironmentFile=-/etc/environment
ExecStart=/bin/sh -c "\
	while true; do \
		etcdctl set /services/kafka/%i/host '${COREOS_PUBLIC_IPV4}'; \
		etcdctl set /services/kafka/%i/port $(docker port foo-kafka | awk -F':' '{print $2}') --ttl 60; \
		sleep 45; \
	done;"
ExecStop=/usr/bin/etcdctl rm /services/kafka@%i

[X-Fleet]
MachineOf=kafka@%i.service